{
  "name": "@shipixen/pliny",
  "description": "Main entry point for pliny components",
  "homepage": "https://github.com/timlrx/pliny",
  "version": "2.0.4",
  "type": "module",
  "exports": {
    "./*": "./*",
    "./analytics/*": "./analytics/*",
    "./comments/*": "./comments/*",
    "./mdx-plugins/*": "./mdx-plugins/*",
    "./newsletter/*": "./newsletter/*",
    "./search/*": "./search/*",
    "./ui/*": "./ui/*",
    "./utils/*": "./utils/*"
  },
  "files": [
    "**"
  ],
  "scripts": {
    "dev": "tsup && cp -fR dist/* ./ && tsup --config tsup.ui.config.ts && rimraf dist && node add-use-client.mjs",
    "build": "tsup && cp -fR dist/* ./ && tsup --config tsup.ui.config.ts && rimraf dist && node add-use-client.mjs && yarn copyfiles",
    "copyfiles": "cp -R public/algolia.css search"
  },
  "author": "Timothy Lin <timothy0336@hotmail.com> (https://timlrx.com)",
  "dependencies": {
    "@docsearch/react": "^3.8.3",
    "@giscus/react": "^3.1.0",
    "@shipixen/kbar": "^1.0.1",
    "@shipixen/next-contentlayer-module": "^2.0.1",
    "github-slugger": "^2.0.0",
    "js-yaml": "4.1.0",
    "next-themes": "^0.4.4",
    "probe-image-size": "^7.2.3",
    "remark": "^15.0.0",
    "shipixen-contentlayer": "^2.0.1",
    "unist-util-visit": "^5.0.0"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  },
  "devDependencies": {
    "next": "13.4.10",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "rimraf": "^3.0.2",
    "tsup": "7.1.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
